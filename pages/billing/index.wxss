.container{
  width:100%;
  height:100vh;
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.number,.endride{
  padding:30rpx 0;
  flex:2;
  width:100%;
  text-align: center;
}
.time{
  flex:6;
  width:100%;
  text-align: center;
}
.time .time-content{
  font-size: 100rpx;
}
.endride button{
   width:90%;
   margin-top:30rpx;
}